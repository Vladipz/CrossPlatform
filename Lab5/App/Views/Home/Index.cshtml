@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center">
    <div class="heading-section">
        <h2 class="title">Лабораторна №5</h2>
        <h3 class="subtitle">Виконав студент групи ІПЗ-31, Данильчук Владислав</h3>
